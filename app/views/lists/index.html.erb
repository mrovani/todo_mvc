<h2 class="text-center">My Lists</h2>

<div class = "table-responsive">
  <table class="table" id="listTable">
    <thead>
      <tr>
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td id="listName"><%= link_to list.name, list %></td>
          <td id="reName"><%= link_to 'Rename List', edit_list_path(list), class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


</div>

<br>

<%= link_to 'Create New List', new_list_path, class:"btn btn-default btn-sm text-center" %><br>
<%= link_to 'Back', :back, class: "btn btn-primary btn-sm dark-button text-center text-uppercase" %>
