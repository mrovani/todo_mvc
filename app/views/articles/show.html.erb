
<!-- call in _article.html.erb partial -->
<%= render @article %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= link_to "Back", :back %>
      <% if @article.user == current_user %>
        |
        <%= link_to 'Edit', edit_article_path(@article) %>
        |
        <%= link_to 'Delete', @article, method: :delete,
        data: { confirm: 'Are you sure?'} %>
        <% end %>
    </div>
  </div>
</div>
